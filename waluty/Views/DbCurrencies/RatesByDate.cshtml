@model waluty.Models.CurrenciesView

<!Doctype html>
<html lang="en">
	<head>
		<link rel="stylesheet" />
		<title>Exchange rates</title>
	</head>
	<body>
		<form method="get" asp-action="RatesByDate">
			<select name="tableId" onchange="this.form.submit()">
				@foreach (var table in Model.AvailableTables)
				{
					<option value="@table.Id" @(table.Id == Model.SelectedTableId ? "selected" : "")>
						@table.EffectiveDate
					</option>
				}
			</select>
		</form>
		<table>
			<thead>
				<tr>
					<th>Name</th>
					<th>Code</th>
					<th>Exchange Rate</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var currency in Model.Rates)
				{
					<tr>
						<td>@currency.Currency</td>
						<td>@currency.Code</td>
						<td>@currency.Mid</td>
					</tr>
				}
			</tbody>
		</table>
	</body>
</html>